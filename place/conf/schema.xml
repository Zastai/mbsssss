<?xml version="1.0"?>

<schema name="place" version="1.5" xmlns:xi="http://www.w3.org/2001/XInclude">
    
  <!-- link to fieldType definitions for all cores-->
  <xi:include href="common/fieldtypes.xml" />
    <!-- mbid needs to be indexed because it's the unique key -->
    <field name="mbid" type="mbid" indexed="true" stored="true"
           multiValued="false" required="true"/>
    <field name="pid" type="mbid" indexed="true" stored="true"
           multiValued="false" required="false"/>

    <field name="names" type="lowercase" indexed="true" stored="true"
           multiValued="true" required="false"/>

    <field name="address" type="lowercase" indexed="true" stored="true"
           multiValued="false" required="false"/>
    <field name="alias" type="lowercase" indexed="true" stored="true"
           multiValued="true" required="false"/>
    <field name="area" type="lowercase" indexed="true" stored="true"
           multiValued="true" required="false"/>
    <field name="begin" type="lowercase" indexed="true" stored="true"
           multiValued="false" required="false"/>
    <field name="comment" type="lowercase" indexed="true" stored="true"
           multiValued="false" required="false"/>
    <field name="end" type="lowercase" indexed="true" stored="true"
           multiValued="false" required="false"/>
    <field name="ended" type="bool" indexed="true" stored="true"
           multiValued="false" required="false"/>
    <field name="lat" type="float" indexed="true" stored="true"
           multiValued="false" required="false"/>
    <field name="long" type="float" indexed="true" stored="true"
           multiValued="false" required="false"/>
    <field name="place" type="lowercase" indexed="true" stored="true"
           multiValued="false" required="true"/>
    <field name="type" type="lowercase" indexed="true" stored="true"
           multiValued="false" required="false"/>
    <field name="_store" type="storefield" indexed="false" stored="true"
           multiValued="false" required="false"/>
    <field name="_version_" type="long" indexed="true" stored="true"/>

  <copyField source="mbid" dest="pid"/>
  <copyField source="place" dest="names"/>
  <copyField source="alias" dest="names"/>
  <!-- field to use to determine and enforce document uniqueness. -->
  <uniqueKey>mbid</uniqueKey>
  <!-- field for the QueryParser to use when an explicit fieldname is absent -->
  <defaultSearchField>names</defaultSearchField>

</schema>
