<?xml version="1.0"?>
<!DOCTYPE doc [
<!ENTITY fieldtypes SYSTEM "fieldtypes.xml">
]>
<schema name="label" version="1.2">
  &fieldtypes;
  <fields>
    <!-- mbid needs to be indexed because it's the unique key -->
    <field name="mbid" type="mbid" indexed="true" stored="true" multiValued="false" required="true"/>
    <field name="laid" type="mbid" indexed="true" stored="true" multiValued="false" required="true"/>

    <!-- search on all names, but provide the primary name and aliases separately in the response -->
    <field name="label" type="lowercasestring" indexed="true" stored="true" multiValued="false" required="true"/>
    <field name="names" type="lowercasestring" indexed="true" stored="false" multiValued="true" required="false"/>
    <field name="alias" type="lowercasestring" indexed="true" stored="true" multiValued="true"/>

    <field name="area" type="string" indexed="true" stored="true" multiValued="true" required="false"/>
    <field name="country" type="string" indexed="true" stored="true" multiValued="true" required="false"/>

    <!-- dates -->
    <field name="begin" type="lowercasestring" indexed="true" stored="true" multiValued="false"/>
    <field name="end" type="lowercasestring" indexed="true" stored="true" multiValued="false"/>
    <!-- `true` or `false` -->
    <field name="ended" type="lowercasestring" indexed="true" stored="true" multiValued="false"/>

    <field name="comment" type="string" indexed="true" stored="true" multiValued="false"/>
    <field name="code" type="string" indexed="true" stored="true" multiValued="true" required="false"/>
    <field name="ipi" type="string" indexed="true" stored="true" multiValued="true"/>
    <field name="tag" type="string" indexed="true" stored="true" multiValued="true"/>

    <field name="_store" type="storefield" indexed="false" stored="true" multiValued="false" required="false"/>

    <field name="type" type="string" indexed="true" stored="true" multiValued="false"/>
    <field name="_version_" type="long" indexed="true" stored="true"/>
  </fields>
  <copyField source="alias" dest="names" />
  <copyField source="label" dest="names" />
  <copyField source="mbid" dest="laid" />
  <!-- field to use to determine and enforce document uniqueness. -->
  <uniqueKey>mbid</uniqueKey>
  <!-- field for the QueryParser to use when an explicit fieldname is absent -->
  <defaultSearchField>names</defaultSearchField>
  <!-- SolrQueryParser configuration: defaultOperator="AND|OR" -->
  <solrQueryParser defaultOperator="OR"/>
</schema>
