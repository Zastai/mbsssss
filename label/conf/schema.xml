<?xml version="1.0"?>

<schema name="label" version="1.5" xmlns:xi="http://www.w3.org/2001/XInclude">

  <!--Searchable Fields
  alias, area, begin, code, comment, country, end, ended, ipi, label,
  labelaccent, laid, type, tag
  -->

  <!-- link to fieldType definitions for all cores-->
  <xi:include href="common/fieldtypes.xml" />

  <!-- mbid needs to be indexed because it's the unique key -->
  <field name="mbid" type="mbid" indexed="true" stored="true"
         multiValued="false" required="true"/>
  <field name="laid" type="mbid" indexed="true" stored="true"
         multiValued="false" required="true"/>

  <!-- search on all names, but provide the primary name and aliases separately in the response -->
  <field name="name" type="string" indexed="true" stored="true"
         required="true"/>
  <field name="label" type="text_general" indexed="true" stored="true"/>
  <field name="labelaccent" type="keep_accents" indexed="true" stored="false"/>
  <field name="names" type="text_general_multi" indexed="true" stored="false"
         multiValued="true" />
  <field name="alias" type="text_general_multi" indexed="true" stored="true"
         multiValued="true"/>
  <field name="area" type="text_general_multi" indexed="true" stored="true"
         multiValued="true"/>
  <field name="country" type="text_general_multi" indexed="true" stored="false"
         multiValued="true"/>

  <!-- dates -->
  <field name="begin" type="date" indexed="true" stored="false"/>
  <field name="end" type="date" indexed="true" stored="false"/>

  <!-- `true` or `false` -->
  <field name="ended" type="string" indexed="true" stored="true"/>

  <field name="comment" type="text_general" indexed="true" stored="false"/>
  <field name="code" type="strip_leading_zeroes_multi" indexed="true" stored="false"
         multiValued="true" />
  <field name="ipi" type="string" indexed="true" stored="true"
         multiValued="true"/>
  <field name="tag" type="text_general_multi" indexed="true" stored="false"
         multiValued="true"/>
  <field name="type" type="lowercase" indexed="true" stored="false"
         omitNorms="true"/>

  <field name="_store" type="storefield" indexed="false" stored="true"/>

  <field name="_version_" type="long" indexed="true" stored="true"/>

  <copyField source="name" dest="label" />
  <copyField source="name" dest="labelaccent"/>
  <copyField source="mbid" dest="laid" />
  <!-- should these be analyzed on the way to names if they have already been analyzed? ...PosGap=1? -->
  <copyField source="label" dest="names" />
  <copyField source="alias" dest="names" />



  <!-- field to use to determine and enforce document uniqueness. -->
  <uniqueKey>mbid</uniqueKey>
  <!-- field for the QueryParser to use when an explicit fieldname is absent -->
  <defaultSearchField>names</defaultSearchField>

</schema>

