  <queryResponseWriter name="mbxml" class="org.musicbrainz.search.solrwriter.MBXMLWriter">
      <str name="entitytype">artist</str>
  </queryResponseWriter>
  <queryResponseWriter name="mbjson" class="org.musicbrainz.search.solrwriter.MBJSONWriter">
      <str name="entitytype">artist</str>
  </queryResponseWriter>


</config>
