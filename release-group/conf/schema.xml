<?xml version="1.0"?>

<schema name="release-group" version="1.5" xmlns:xi="http://www.w3.org/2001/XInclude">

  <!--Searchable Fields
  arid, artist, artistname, comment, creditname, primarytype, rgid,
  releasegroup, TODO releasegroupaccent, releases, release, reid, secondarytype,
  status, tag, SCHEMA type
  -->

  <!-- link to fieldType definitions for all cores-->
  <xi:include href="common/fieldtypes.xml" />
    <!-- mbid needs to be indexed because it's the unique key -->
    <field name="mbid" type="mbid" indexed="true" stored="true"
           multiValued="false" required="true"/>
    <field name="rgid" type="mbid" indexed="true" stored="true"
           multiValued="false" required="false"/>

    <field name="releasegroup" type="lowercase" indexed="true"
           stored="true" multiValued="false" required="true"/>
    <field name="arid" type="mbid" indexed="true" stored="true"
           multiValued="true" required="false"/>


    <field name="artist" type="lowercase" indexed="true" stored="true"
           multiValued="false" required="false"/>
    <field name="artistname" type="lowercase" indexed="true" stored="true"
           multiValued="true" required="false"/>
    <field name="comment" type="lowercase" indexed="true" stored="true"
           multiValued="false" required="false"/>
    <field name="creditname" type="lowercase" indexed="true" stored="true"
           multiValued="true" required="false"/>

    <!-- releases in this release group -->
    <field name="reid" type="mbid" indexed="true" stored="true"
           multiValued="true" required="false"/>
    <!-- some release groups don't contain releases -->
    <field name="releases" type="int" indexed="true" stored="true"
           multiValued="false" required="false"/>
    <field name="release" type="lowercase" indexed="true" stored="true"
           multiValued="true" required="false"/>


    <!-- types -->
    <field name="primarytype" type="lowercase" indexed="true"
           stored="true" multiValued="false" required="false"/>
    <field name="secondarytype" type="lowercase" indexed="true"
           stored="true" multiValued="true" required="false"/>
    <field name="type" type="lowercase" indexed="true" stored="true"
           multiValued="true" required="false"/>

    <field name="status" type="lowercase" indexed="true" stored="true"
           multiValued = "true" required="false"/>
    <field name="tag" type="lowercase" indexed="true" stored="true"
           multiValued="true" required="false"/>

    <field name="_store" type="storefield" indexed="false" stored="true"
           multiValued="false" required="false"/>

    <field name="_version_" type="long" indexed="true" stored="true"/>

  <copyField source="mbid" dest="rgid" />

  <!-- field to use to determine and enforce document uniqueness. -->
  <uniqueKey>mbid</uniqueKey>

  <!-- field for the QueryParser to use when an explicit fieldname is absent -->
  <defaultSearchField>releasegroup</defaultSearchField>

</schema>
