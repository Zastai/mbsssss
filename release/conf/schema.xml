<?xml version="1.0"?>

<schema name="release" version="1.5" xmlns:xi="http://www.w3.org/2001/XInclude">
    
  <!-- link to fieldType definitions for all cores-->
  <xi:include href="common/fieldtypes.xml" />
    <!-- mbid needs to be indexed because it's the unique key -->
    <field name="mbid" type="mbid" indexed="true" stored="true"
           multiValued="false" required="true"/>
    <field name="reid" type="mbid" indexed="true" stored="true"
           multiValued="false" required="false"/>

    <field name="release" type="lowercase" indexed="true" stored="true"
           multiValued="false" required="true"/>
    <field name="name" type="lowercase" indexed="true" stored="false"
           multiValued="true" required="false"/>
    <field name="arid" type="mbid" indexed="true" stored="true"
           multiValued="true" required="false"/>

    <!-- release event
         in reality, a release may have multiple release events, but the
         current search server only supports 1
    -->
    <field name="country" type="string" indexed="true" stored="true"
           multiValued="true" required="false"/>
    <field name="date" type="lowercase" indexed="true" stored="true"
           multiValued="true" required="false"/>

    <field name="comment" type="lowercase" indexed="true" stored="true"
           multiValued="false" required="false"/>
    <!-- works use 'language' here -->
    <field name="lang" type="string" indexed="true" stored="true"
           multiValued="false" required="false"/>
    <field name="script" type="string" indexed="true" stored="true"
           multiValued="false" required="false"/>

    <field name="artist" type="lowercase" indexed="true" stored="true"
           multiValued="false" required="true"/>
    <field name="artistname" type="lowercase" indexed="true" stored="true"
           multiValued="true" required="true"/>
    <field name="asin" type="lowercase" indexed="true" stored="true"
           multiValued="true" required="false"/>
    <!-- a barcode is an integer, but it doesn't really make sense to store it
         as one because range queries etc. don't really make sense -->
    <field name="barcode" type="lowercase" indexed="true" stored="true"
           multiValued="false" required="false"/>
    <field name="catno" type="lowercase" indexed="true" stored="true"
           multiValued="true" required="false"/>
    <field name="creditname" type="lowercase" indexed="true" stored="true"
           multiValued="true" required="false"/>
    <field name="discids" type="int" indexed="true" stored="true"
           multiValued="false" required="false"/>
    <field name="format" type="lowercase" indexed="true" stored="true"
           multiValued="true" required="false"/>
    <field name="laid" type="mbid" indexed="true" stored="true"
           multiValued="true" required="false"/>
    <field name="label" type="lowercase" indexed="true" stored="true"
           multiValued="true" required="false" />
    <field name="mediums" type="int" indexed="true" stored="true"
           multiValued="false"/>
    <field name="quality" type="lowercase" indexed="true" stored="true"
           multiValued="false" required="false"/>
    <field name="rgid" type="mbid" indexed="true" stored="true"
           multiValued="true" required="false"/>
    <field name="status" type="lowercase" indexed="true" stored="true"
           multiValued="false" required="false"/>
    <field name="tag" type="lowercase" indexed="true" stored="true"
           multiValued="true" required="false"/>
    <field name="tracks" type="int" indexed="true" stored="true"
           multiValued="false"/>
    <field name="tracksmedium" type="int" indexed="true" stored="true"
           multiValued="true"/>

    <field name="primarytype" type="lowercase" indexed="true"
           stored="true" multiValued="false" required="false"/>
    <field name="secondarytype" type="lowercase" indexed="true"
           stored="true" multiValued="true" required="false"/>
    <field name="type" type="lowercase" indexed="true" stored="true"
           multiValued="true" required="false"/>

    <field name="_store" type="storefield" indexed="false" stored="true"
           multiValued="false" required="false"/>

    <field name="_version_" type="long" indexed="true" stored="true"/>

  <copyField source="release" dest="name" />
  <copyField source="mbid" dest="reid" />

  <!-- field to use to determine and enforce document uniqueness. -->
  <uniqueKey>mbid</uniqueKey>

  <!-- field for the QueryParser to use when an explicit fieldname is absent -->
  <defaultSearchField>release</defaultSearchField>

</schema>
