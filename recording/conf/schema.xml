<?xml version="1.0"?>
<!DOCTYPE doc [
<!ENTITY fieldtypes SYSTEM "fieldtypes.xml">
]>
<schema name="recording" version="1.2">
  &fieldtypes;
  <fields>
    <!-- mbid needs to be indexed because it's the unique key -->
    <field name="mbid" type="mbid" indexed="true" stored="true" multiValued="false" required="true"/>

    <field name="recording" type="lowercasestring" indexed="true" stored="true" multiValued="false" required="true"/>
    <field name="name" type="lowercasestring" indexed="true" stored="true" multiValued="false" required="true"/>

    <!-- artists -->
    <field name="arid" type="mbid" indexed="true" stored="true" multiValued="true" required="true"/>

    <field name="artist" type="lowercasestring" indexed="true" stored="true" multiValued="false" required="true"/>

    <field name="artistname" type="lowercasestring" indexed="true" stored="true" multiValued="true" required="true"/>

    <field name="creditname" type="lowercasestring" indexed="true" stored="true" multiValued="true" required="true"/>

    <field name="isrc" type="lowercasestring" indexed="true" stored="true"
    multiValued="true"       required="false"/>

    <!-- release groups -->
    <field name="rgid" type="mbid" indexed="true" stored="true"
      multiValued="true" required="false"/>

    <!-- releases this recording appears on -->
    <field name="reid" type="mbid" indexed="true" stored="true" multiValued="true" required="false"/>

    <field name="release" type="lowercasestring" indexed="true" stored="true" multiValued="true" required="false"/>

    <field name="status" type="lowercasestring" indexed="true" stored="true"
      multiValued="true" required="false"/>

    <field name="format" type="lowercasestring" indexed="true" stored="true"
      multiValued="true" required="false"/>

    <field name="position" type="long" indexed="true" stored="true"
      multiValued="true" required="false"/>

    <field name="number" type="string" indexed="true" stored="true"
      multiValued="true" required="false"/>

    <field name="tnum" type="long" indexed="true" stored="true"
      multiValued="true" required="false"/>

    <field name="tracks" type="long" indexed="true" stored="true"
      multiValued="true" required="false"/>

    <field name="tracksrelease" type="long" indexed="true" stored="true"
      multiValued="true" required="false"/>

    <field name="tid" type="mbid" indexed="true" stored="true" multiValued="true" required="false"/>

    <!-- release events -->
    <field name="country" type="lowercasestring" indexed="true" stored="true"
      multiValued="true" required="false"/>
    <field name="date" type="lowercasestring" indexed="true" stored="true" multiValued="false"/>

    <!-- types -->
    <field name="secondarytype" type="lowercasestring" indexed="true"
      stored="true" multiValued="true" required="false"/>
    <field name="primarytype" type="lowercasestring" indexed="true"
      stored="true" multiValued="true" required="false"/>
    <field name="type" type="lowercasestring" indexed="true"
      stored="true" multiValued="true" required="false"/>

    <field name="tag" type="lowercasestring" indexed="true" stored="true" multiValued="true" required="false"/>
    <field name="comment" type="lowercasestring" indexed="true" stored="true" multiValued="false" required="false"/>
    <field name="dur" type="long" indexed="true" stored="true" multiValued="false" required="false"/>
    <field name="qdur" type="long" indexed="true" stored="true" multiValued="false" required="false"/>
    <field name="video" type="bool" indexed="true" stored="true" multiValued="false" required="true"/>

    <field name="_store" type="storefield" indexed="false" stored="true" multiValued="false" required="false"/>

    <field name="_version_" type="long" indexed="true" stored="true"/>

  </fields>
  <copyField source="primarytype" dest="type" />
  <copyField source="secondarytype" dest="type" />
  <copyField source="recording" dest="name" />
  <!-- field to use to determine and enforce document uniqueness. -->
  <uniqueKey>mbid</uniqueKey>
  <!-- field for the QueryParser to use when an explicit fieldname is absent -->
  <defaultSearchField>recording</defaultSearchField>
  <!-- SolrQueryParser configuration: defaultOperator="AND|OR" -->
  <solrQueryParser defaultOperator="OR"/>
</schema>
